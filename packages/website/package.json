{
  "name": "website",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "del-cli build public/build",
    "dev": "npm run clean && run-p --print-label --race dev:*",
    "dev:remix": "remix dev",
    "dev:tailwind": "npm run tailwind -- --watch",
    "build": "npm run clean && npm run tailwind -- --minify && remix build",
    "start": "remix-serve build",
    "tailwind": "tailwindcss -o app/tailwind.css"
  },
  "dependencies": {
    "@remix-run/react": "^1.4.0",
    "@remix-run/serve": "^1.4.0",
    "@remix-run/server-runtime": "^1.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "autoprefixer": "^10.4.4",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14"
  }
}
