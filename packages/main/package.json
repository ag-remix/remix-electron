{
  "name": "@remix-electron/main",
  "version": "2.0.0-alpha.4",
  "author": "itsMapleLeaf",
  "description": "Electron main process library for remix-electron",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "changelog": "https://github.com/itsMapleLeaf/remix-electron/releases",
  "type": "module",
  "exports": "./dist/main.cjs",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/main.ts --clean",
    "watch": "tsup src/main.ts --watch"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fast-glob": "^3.2.11",
    "mime": "^3.0.0"
  },
  "peerDependencies": {
    "@remix-run/node": ">=1",
    "@remix-run/server-runtime": ">=1",
    "electron": ">=17",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@remix-electron/common": "*",
    "@remix-electron/renderer": "^2.0.0-alpha.4",
    "@remix-run/node": "^1.3.3",
    "@remix-run/server-runtime": "^1.3.3",
    "electron": "^18.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^5.12.1"
  },
  "sideEffects": [
    "src/browser-globals.ts"
  ],
  "tsup": {
    "sourcemap": true,
    "target": "node16",
    "format": [
      "cjs"
    ],
    "dts": true
  },
  "publishConfig": {
    "access": "public"
  }
}
