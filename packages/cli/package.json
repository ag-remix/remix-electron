{
  "name": "@remix-electron/cli",
  "version": "2.0.0-alpha.3",
  "author": "itsMapleLeaf",
  "description": "CLI for remix-electron",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "changelog": "https://github.com/itsMapleLeaf/remix-electron/releases",
  "type": "module",
  "bin": {
    "remix-electron": "./dist/main.js"
  },
  "files": [
    "dist",
    "shims"
  ],
  "scripts": {
    "build": "tsup-node src/main.ts --clean",
    "watch": "tsup-node src/main.ts --watch"
  },
  "dependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@remix-run/dev": "^1.3",
    "cac": "^6.7.12",
    "esbuild": "^0.14.36",
    "execa": "^6.1.0",
    "local-pkg": "^0.4.1",
    "ora": "^6.1.0",
    "pretty-ms": "^7.0.1"
  },
  "peerDependencies": {
    "electron": ">=18",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@remix-electron/common": "*",
    "electron": "^18.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^5.12.1"
  },
  "tsup": {
    "sourcemap": true,
    "target": "node16",
    "format": [
      "esm"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
