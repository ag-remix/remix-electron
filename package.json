{
  "name": "remix-electron",
  "type": "module",
  "version": "2.0.0-unreleased",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "types": "./dist/main.d.ts",
  "exports": "./dist/main.cjs",
  "bin": "./dist/cli.js",
  "files": [
    "dist",
    "shims"
  ],
  "scripts": {
    "build": "esmo scripts/build.ts",
    "watch": "esmo scripts/build.ts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "pnpm test && release-it"
  },
  "dependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@types/mime": "^2.0.3",
    "@types/node": "*",
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.27",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.11",
    "mime": "^3.0.0",
    "ora": "^6.1.0",
    "pretty-ms": "^7.0.1"
  },
  "peerDependencies": {
    "@remix-run/dev": ">=1.3.3",
    "@remix-run/node": ">=1.3.3",
    "@remix-run/react": ">=1.3.3",
    "@remix-run/server-runtime": ">=1.3.3",
    "electron": ">=16",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@playwright/test": "^1.20.1",
    "@remix-run/dev": "^1.3.3",
    "@remix-run/node": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "@remix-run/server-runtime": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "electron": "^17.1.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^41.0.1",
    "esno": "^0.14.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.20.1",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^14.13.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vitest": "^0.7.10"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.cache/**",
      "**/.vscode/**"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-unused-modules": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off",
      "prefer-const": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
